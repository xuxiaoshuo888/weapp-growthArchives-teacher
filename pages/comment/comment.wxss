/* pages/comment/comment.wxss */

.hole {
  width: 100vw;
  /* height: 100vh; */
  background-color: #f0f2f6;
  padding-top: 15px;
  padding-bottom: 70px;
  box-sizing: content-box;
}

.name-list {
  background-color: white;
  padding: 10px 20px;
  font-size: 14px;
  color: #323b45;
}

.wd-img {
  width: 146rpx;
  height: 100rpx;
  margin-left: 20px;
}

.pj-block {
  padding-top: 20px;
}

.wd-checkbox {
  background-color: white;
  padding: 10px 20px;
  margin-top: 5px;
  margin-bottom: 10px;
}



.warning {
  padding: 10px 10px 30px;
  background-color: white;
}

/* .van-radio{
  padding-bottom:10px;height:30px;line-height:30px;
