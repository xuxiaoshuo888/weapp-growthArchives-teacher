.img-num-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plus-class {
  background-color: white !important;
}

.warning-btn {
  color: #fff !important;
  background-color: #e64340 !important;
}

.pj-contain {
  position: relative;
  padding: 22px 30px;
}

.pj-contain-img {
  width: 64rpx;
  height: 82rpx;
  z-index: 999;
  position: absolute;
  top: 0;
  left: 0;
}

.pj-contain-text {
  padding: 6rpx 15rpx 6rpx 20rpx;
  background-color: #41B65A;
  color: #f4f5f9;
  position: absolute;
  left: 90rpx;
  top: 9rpx;
  z-index: 1;
  font-size: 24rpx;
  font-weight: normal;
  font-family: 'Playfair Display SC';
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  width: 220rpx;
}