.numstyle {
  font-size: 20px;
  font-weight: normal;
  font-family: 'Playfair Display SC';
  font-style: italic;
  color: rgba(50, 59, 69, 1);
  line-height: 19px;
  letter-spacing: 1px;
  margin-left: 20px;
  padding-bottom: 5px;
  padding-right: 10px;
}
.nodata{
  text-align: center;
  margin-top:40%; 
}
.fixed-view {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}